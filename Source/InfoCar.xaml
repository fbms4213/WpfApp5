<Window x:Class="Source.InfoCar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Source"
        mc:Ignorable="d"
        Title="InfoCar" Height="276" Width="225">
    <Grid>
        <StackPanel>
            <Label Foreground="DarkMagenta" FontSize="25" Content="Make"></Label>
            <TextBox FontSize="25" Text="{Binding Car.Make}"></TextBox>

            <Label Foreground="DarkMagenta" FontSize="25" Content="Model"></Label>
            <TextBox FontSize="25" Text="{Binding Car.Model}"></TextBox>

            <Label Foreground="DarkMagenta" FontSize="25" Content="Year"></Label>
            <TextBox FontSize="25" Text="{Binding Car.Year}"></TextBox>
        </StackPanel>
    </Grid>
</Window>
